        <sections>
            <section id="license">
                <items>
                    <item id="email">
                        <type>input</type>
                    </item>
                    <item id="password">
                        <type>password</type>
                    </item>
                    <item id="license">
                        <type>input</type>
                    </item>
                    <item id="info">
                        <type>info</type>
