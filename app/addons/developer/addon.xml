                    </item>
                </items>
            </section>
            <section id="emails">
                <items>
                    <item id="disable_emails">
                        <type>checkbox</type>
                    </item>
                    <item id="catch_all_email">
                        <type>input</type>
                    </item>
                </items>
            </section>
        </sections>
    </settings>
    <compatibility>
        <php_extensions>
            <zip>
